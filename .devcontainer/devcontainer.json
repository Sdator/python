{
  "name": "PY",
  // 容器构建过程上下文目录
  // "context": "..",
  // "dockerFile": "Test.Dockerfile",
  // "image": "sdator/py:dev",
  "build": {
    "dockerfile": "Test.Dockerfile"
    // "target": "dev-py"
    // "context": "."
  },
  // 配置文件
  // "dockerComposeFile": "docker-compose.yml",
  // 连接到的服务
  // "service": "dev-py",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "USERPROFILE": "${localEnv:USERPROFILE}"
  },
  // 容器环境变量
  "containerEnv": { "MY_VARIABLE": "${localEnv:MY_VARIABLE}" },

  // 连接容器后进入的工作目录
  "workspaceFolder": "/work",
  // "workspaceMount": "source=${localWorkspaceFolder},target=/work,type=bind,consistency=cached",
  // "remoteEnv": { "MY_VARIABLE": "some-value" }
  // 本地文件映射到容器中  不会设置 用runArgs代替
  // "mounts": [
  //   "source=${localEnv:HOME}${localEnv:USERPROFILE},target=/host-home-folder,type=bind,consistency=cached"
  // ]
  "mounts": ["source=/mnt/d/Git/code/python,target=/work,type=bind"],

  // "runArgs": ["-v", "$PWD:/work"]
  "runArgs": ["env"]

  // "runArgs": ["-v", "~/.ssh:/home/vscode/.ssh:ro"]

